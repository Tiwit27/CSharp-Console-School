<Window x:Class="Lekcja2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lekcja2"
        mc:Ignorable="d"
        Title="Układy kontrolek" Height="600" Width="800">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <StackPanel Cursor="Hand">
            <Button Name="b1" Content="Układ StackPanel" FontSize="40" FontWeight="Bold" Margin="0,30" Click="Button_Click"/>
            <Button Name="b2" Content="Układ WrapPanel" FontSize="40" FontWeight="Bold" Margin="0,30" Click="Button_Click"/>
            <Button Name="b3" Content="Układ DockPanel" FontSize="40" FontWeight="Bold" Margin="0,30" Click="Button_Click"/>
            <Button Name="b4" Content="Układ UniformGrid" FontSize="40" FontWeight="Bold" Margin="0,30" Click="Button_Click"/>
            <Button Name="b5" Content="Układ Grid" FontSize="40" FontWeight="Bold" Margin="0,30" Click="Button_Click"/>
        </StackPanel>
    </ScrollViewer>
</Window>
