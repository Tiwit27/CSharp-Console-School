<Window x:Class="Lekcja4.OknoGrid"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lekcja4"
        mc:Ignorable="d"
        Title="OknoGrid" Height="450" Width="800">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="0,0" Grid.Row="0" Grid.Column="0" FontSize="60" />
        <TextBlock Text="0,1" Grid.Row="1" Grid.Column="0" FontSize="60" />
        <TextBlock Text="0,2" Grid.Row="2" Grid.Column="0" FontSize="60" />
        <TextBlock Text="1,0" Grid.Row="0" Grid.Column="1" FontSize="60" />
        <TextBlock Text="1,1" Grid.Row="1" Grid.Column="1" FontSize="60" />
        <TextBlock Text="1,2" Grid.Row="2" Grid.Column="1" FontSize="60" />
        <TextBlock Text="2,0" Grid.Row="0" Grid.Column="2" FontSize="60" />
        <TextBlock Text="2,1" Grid.Row="1" Grid.Column="2" FontSize="60" />
        <TextBlock Text="2,2" Grid.Row="2" Grid.Column="2" FontSize="60" />
    </Grid>
</Window>
