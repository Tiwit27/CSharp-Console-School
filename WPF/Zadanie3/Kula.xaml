<Window x:Class="Zadanie3.Kula"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadanie3"
        mc:Ignorable="d"
        Title="Kula" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Image Source="grafika/kula.png" Name="grafika" Height="170"/>
            <TextBlock Text="Wzór na pole: " FontSize="25" Margin="0,0,0,15"/>
            <TextBlock Text="P=4*π*rx\u00B2" FontSize="25" Margin="0,0,0,40" Name="wzor_pole"/>
            <TextBlock Text="Wzór na objętość: " FontSize="25" Margin="0,0,0,15"/>
            <TextBlock Text="V=4/3*π*r^3 " FontSize="25" Name="wzor_objetosc"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="r=" FontSize="30"/>
                <TextBox x:Name="r" Width="100"/>
            </StackPanel>
            <Button Content="Oblicz" Width="200" FontSize="30" Click="Button_Click"/>
            <TextBlock Text="P = " FontSize="50" Name="p"/>
            <TextBlock Text="V = " FontSize="50" Name="v"/>
        </StackPanel>
    </Grid>
</Window>
