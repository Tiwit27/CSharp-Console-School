<Window
    x:Class="Zadanie3.Kalkulator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Zadanie3"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Kalkulator"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Image
                Name="grafika"
                Height="170"
                Source="grafika/kula.png" />
            <TextBlock
                Margin="0,0,0,15"
                FontSize="25"
                Text="Wzór na pole: " />
            <TextBlock
                Name="wzor_pole"
                Margin="0,0,0,40"
                FontSize="25"
                Text="P=2*a*b+2*a*h+2*b*h" />
            <TextBlock
                Margin="0,0,0,15"
                FontSize="25"
                Text="Wzór na objętość: " />
            <TextBlock
                Name="wzor_objetosc"
                FontSize="25"
                Text="V=a*b*h " />
        </StackPanel>
        <StackPanel Grid.Column="1">
            <StackPanel
                Name="pola"
                HorizontalAlignment="Center"
                Orientation="Horizontal" />
            <Button
                Width="200"
                Click="Button_Click"
                Margin="0,10,0,0"
                Content="Oblicz"
                FontSize="30" />
            <TextBlock
                Name="p"
                FontSize="40"
                Text="P = ?" />
            <TextBlock
                Name="v"
                FontSize="40"
                Text="V = ?" />

        </StackPanel>
    </Grid>
</Window>
