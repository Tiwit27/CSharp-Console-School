<Window x:Class="Zadanie5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadanie5"
        mc:Ignorable="d"
        Closing="Window_Closing"
        ResizeMode="NoResize"
        Title="MainWindow" Height="500" Width="400">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
        <TextBlock Text="Przelicznik Temperatur" FontSize="30" HorizontalAlignment="Center" Margin="0,10,0,30" FontWeight="Medium"/>
        <TextBlock Text="Stopnie Celciusza:" FontSize="30"/>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,25">
            <TextBox Text="" Width="300" FontSize="20" Padding="10" LostFocus="TextBox_LostFocus" KeyDown="TextBox_KeyDown" Name="celcius" PreviewTextInput="TextBox_PreviewTextInput"/>
            <TextBlock Text="°C" Background="Gray" Foreground="Black" FontSize="20" Padding="10"/>
        </StackPanel>
        <TextBlock Text="Stopnie Fahrenheita:" FontSize="30"/>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,25">
            <TextBox Text="" Width="300" FontSize="20" Padding="10" LostFocus="TextBox_LostFocus" KeyDown="TextBox_KeyDown" Name="fahrenheit" PreviewTextInput="TextBox_PreviewTextInput"/>
            <TextBlock Text="°F" Background="Gray" Foreground="Black" FontSize="20" Padding="10"/>
        </StackPanel>
        <TextBlock Text="Stopnie Kelvina:" FontSize="30"/>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,25">
            <TextBox Text="" Width="300" FontSize="20" Padding="10" LostFocus="TextBox_LostFocus" KeyDown="TextBox_KeyDown" Name="kelvin" PreviewTextInput="TextBox_PreviewTextInput"/>
            <TextBlock Text="K" Background="Gray" Foreground="Black" FontSize="20" Padding="10"/>
        </StackPanel>

    </StackPanel>
</Window>
