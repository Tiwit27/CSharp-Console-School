<Window x:Class="Zadanie8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadanie8"
        mc:Ignorable="d"
        Name="main"
        Title="MainWindow" Height="450" Width="800"
        Background="#d13030">
    <StackPanel>
        <ComboBox Name="image" Width="200" Margin="0,10,0,10" SelectionChanged="image_SelectionChanged">
            <ComboBoxItem Tag="panda.jpg" IsSelected="True">Panda</ComboBoxItem>
            <ComboBoxItem Tag="kaczka.jpg">Kaczka</ComboBoxItem>
            <ComboBoxItem Tag="krolik.jpg">Królik</ComboBoxItem>
            <ComboBoxItem Tag="goryl.jpg">Goryl</ComboBoxItem>
        </ComboBox>
        <ComboBox Name="color" Width="200" Margin="0,10,0,10">
            <ComboBoxItem Tag="#d13030" IsSelected="True">Czerowny</ComboBoxItem>
            <ComboBoxItem Tag="#36b314">Zielony</ComboBoxItem>
            <ComboBoxItem Tag="#0880bd">Niebieski</ComboBoxItem>
            <ComboBoxItem Tag="#cf11b5">Różowy</ComboBoxItem>
        </ComboBox>
        <Image Name="selected_image" Width="300" Height="200" Source="/zdjecia/panda.jpg"></Image>
    </StackPanel>
</Window>
