<Window x:Class="Lekcja3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lekcja3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <StackPanel Orientation="Vertical">
        <Button Name="Start" Content="Start" Click="Start_Click"/>
        <Button x:Name="Stop" Content="Stop" Click="Stop_Click"/>
        <Label Name="Label" Content="0"/>
        <StackPanel Orientation="Vertical" Margin="0,40,0,0">
            <Button Name="Start1" Content="Start" Click="Start1_Click"/>
            <Button x:Name="Stop1" Content="Stop" Click="Stop1_Click"/>
            <Label Name="Label1" Content="1000"/>
        </StackPanel>
    </StackPanel>
</Window>
